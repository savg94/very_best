<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Favorite Dishes

    <a data-toggle="collapse" href="#user_favorite_dishes_new_form">
      Add favorite dish
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.favorite_dishes.each do |favorite_dish| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to favorite_dish, favorite_dish %>

        <%= link_to favorite_dish, method: :delete, data: { confirm: "Do you really want to delete this favorite_dish" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_favorite_dishes_new_form">
        <%= render partial: "users/user_favorite_dishes_new_form" %>
      </div>
    </div>

  </ul>
</div>
